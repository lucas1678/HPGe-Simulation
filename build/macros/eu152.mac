/gps/particle ion
/gps/ion 57 139 0 0  #Z, A, 0, 0   #<---- Modify Z and A numbers to change radioisotope!
/gps/direction -1 0 0 #momentum direction
/gps/energy 0          #energy is 0 so isotope is spawning with 0 momentum
/gps/number 1

/gps/pos/type Volume
/gps/pos/shape Sphere  #spawn isotopes in spherical volume 
/gps/pos/centre 0 -0.25 0.45 #centre of volume source
/gps/pos/radius 1 cm  #radius of source sphere
/run/beamOn 1

