/gps/particle ion
/gps/ion 56 133 0 0  #Z, A, 0, 0   #<---- Modify Z and A numbers to change radioisotope!
/gps/direction -1 0 0 #momentum direction
/gps/energy 0          #energy is 0 so isotope is spawning with 0 momentum

/gps/pos/type Volume
/gps/pos/shape Sphere  #spawn isotopes in spherical volume 
/gps/pos/centre 0 0 0 #centre of volume source
/gps/pos/radius 5 cm  #radius of source sphere

/run/beamOn 100000000
